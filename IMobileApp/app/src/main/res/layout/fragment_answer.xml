<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".application.AnswerFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:id="@+id/answer_question_number">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/answer_activity_question_txt_view"
            android:layout_above="@+id/list_view_answer_question"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="30dp"
            android:maxLines="2" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/answer_activity_button_next_questionnaire"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#6fa700"
                fancy:fb_focusColor="#7ab800"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="20dp"
                fancy:fb_text="@string/next_questionne"
                fancy:fb_textColor="#FFFFFF"
                style="@style/style_home_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="156dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:id="@+id/list_view_answer_question"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</FrameLayout>
