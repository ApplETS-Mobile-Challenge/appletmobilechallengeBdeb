<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_list_checkbox"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/answer_list_answer_text"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/answer_list_checkbox"
            android:layout_toEndOf="@+id/answer_list_checkbox" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/home_page_btn_creer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="15dp"
            fancy:fb_text="X"
            fancy:fb_textColor="#ff0000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>